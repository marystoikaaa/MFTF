<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="AdminProductGridSection">
        <element name="magentoCatalogButton" type="button" selector="#menu-magento-catalog-catalog" timeout="100"/>
        <element name="productGridButton" type="button" selector=".item-catalog-products" timeout="100" />
        <element name="productGridNameProduct" type="button" selector=".data-grid-filters-actions-wrap button"  timeout="200"/>
        <element name="productChooseFilterButton" type="button" selector=".data-grid-filters-actions-wrap button" timeout="100" />
        <element name="skuInput" type="input" selector="input[name='sku']" timeout="100" />
        <element name="applyFilterButton" type="button" selector="button.action-secondary" timeout="100" />
        <element name="recordsInput" type="input" selector=".admin__data-grid-outer-wrap" timeout="100" />
        <element name="productConfigClick" type="text" selector="//*[contains(text(), 'Test Configurable product')]/../.." timeout="100" />
        <element name="productSimpleTstClick" type="text" selector="//*[contains(text(), 'Test Configurable-simple product-S-Gray')]/../.." timeout="100" />
        <element name="numberOfSimpleProductsInConfig" type="text" selector="div[data-index='configurable-matrix'] tbody tr" timeout="100" />
        <element name="productDinamicBundleClick" type="text" selector="//*[contains(text(), 'TST-GrpBnd-Bundle-DynamicPrice')]/../.." timeout="100" />
        <element name="numberOfSimpleProductsInBundle" type="text" selector="div[data-index='bundle_selections'] tbody tr" timeout="100" />
        <element name="productGroupedProductClick" type="text" selector="//*[contains(text(), 'TST-GrpBnd-Simple-1')]/../.." timeout="100" />
        <element name="numberOfCustomerOptionsInSimple" type="text" selector="div[data-index='custom_options'] tbody tr" timeout="100" />
        <element name="advancedPricingButton" type="button" selector="button[data-index='advanced_pricing_button']" timeout="100"/>
        <element name="advancedPricingQtyOne" type="text" selector="//*[contains(text(), '5')]/../.." timeout="100" />
        <element name="advancedPricingQtyTwo" type="text" selector="//*[contains(text(), '10')]/../.." timeout="100" />
        <element name="advancedPricingPriceOne" type="text" selector="//*[contains(text(), '63')]/../.." timeout="100" />
        <element name="advancedPricingPriceTwo" type="text" selector="//*[contains(text(), '58')]/../.." timeout="100" />
    </section>
</sections>