<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminExportSourceDataActionGroup">
        <annotations>
            <description>Input ftp data</description>
        </annotations>
        <arguments>
            <argument name="ftpData"/>
        </arguments>
        <fillField selector="{{AdminExportSourceSection.ftpHost}}" userInput="{{AdminFtpSourceData.host}}"  stepKey="fillFtpHost"/>
        <fillField selector="{{AdminExportSourceSection.ftpPort}}" userInput="{{AdminFtpSourceData.port}}"  stepKey="fillFtpPort"/>
        <fillField selector="{{AdminExportSourceSection.ftpUser}}" userInput="{{AdminFtpSourceData.user}}"  stepKey="fillFtpUser"/>
        <fillField selector="{{AdminExportSourceSection.ftpPassword}}" userInput="{{AdminFtpSourceData.password}}"  stepKey="fillFtpPassword"/>
    </actionGroup>

</actionGroups>
