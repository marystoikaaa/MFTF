<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="CustomersAndAddresses01ImportAddUpdateCsvGooglesheet">
        <annotations>
            <!--   Comment in Annotations for DevDocs Test are not affecting test generation  -->
            <features value="improveImport"/>
            <stories value="CustomersAndAddresses Import Add Update Csv Googlesheet"/>
            <title value="CustomersAndAddresses Import Add Update Csv Googlesheet"/>
            <description value="Import CustomersAndAddresses successful"/>
            <severity value="CRITICAL"/>
            <group value="improveImport"/>
            <group value="improveImportExport"/>
            <group value="improveImportExportCustomersAndAddresses"/>
        </annotations>
        <before>
        <amOnPage url="admin" stepKey="openAdminPanelPage" />
            <fillField selector="#username" userInput="admin" stepKey="fillLoginField" />
            <fillField selector="#login" userInput="magento2" stepKey="fillPasswordField" />
            <click selector="#login-form .action-login" stepKey="clickLoginButton" />
        </before>
        <after>
        
        </after>

        <!-- Go to Import page and click "Add Job" button -->
        <actionGroup ref="AdminImproveImportActionGroup" stepKey="createImportJob">
            <argument name="importProcess" />
        </actionGroup>

        <click selector="{{AdminImportGeneralSection.generalIsActive}}" stepKey="clickGeneralIsActive" after=""/>
        <fillField selector="{{AdminImportGeneralSection.generalTitle}}" userInput="CustomersAndAddresses Import - add update - csv - google sheet" stepKey="fillGeneralTitle"/>
        <click selector="{{AdminImportGeneralSection.generalGenerateUrl}}" stepKey="enableUrlIfDuplicate"/>
        <click selector="{{AdminImportGeneralSection.generalReindex}}" stepKey="enableReindex"/>
        
        <!-- Specify Import Settings section -->
        <click selector="{{AdminImportSettingsSection.fieldSettings}}" stepKey="openFieldSettings"/>
        <selectOption userInput="customer_composite" selector="{{AdminImportSettingsSection.settingsEntity}}" stepKey="selectSettingsEntity"/>

        <!-- Specify Import Behavior section -->
        <selectOption userInput="add_update" selector="{{AdminImportBehaviorSection.behaviorBehavior}}" stepKey="selectBehavior"/>

        <!-- Specify Import Source section -->
        <selectOption userInput="csv" selector="{{AdminImportSourceSection.typeFile}}" stepKey="selectFileType"/>
        <selectOption userInput="google" selector="{{AdminImportSourceSection.importSource}}" stepKey="selectSource"/>
        <executeJS function="return('https://docs.google.com/spreadsheets/d/13FemIzzexF5koAdQYjbcKscqoCfXyknYWkQkbSZGPsk/edit#gid=1732782711');" stepKey="returnLink"/>
        <fillField selector="{{AdminImportSourceSection.googlesheetPath}}"
                   userInput="{$returnLink}"
                   stepKey="fillGoogleFilePath"/>           
        <scrollTo selector="footer" stepKey="footer"/>
        
        <!-- Validate Import file -->
        <click selector="{{AdminImportValidateSection.validateButton}}" stepKey="clickValidateImportFile"/>
        <waitForText userInput="File validated successfully." selector="{{AdminImportValidateSection.validateResult}}" stepKey="waitValidateText"/>

        <!-- Save and run process -->
        <click selector="{{AdminImportSaveAndRun.saveAndRun}}" stepKey="clickSaveAndRun"/>
        <waitForPageLoad stepKey="waitForSaveAndRunPageOpened"/>
        <click selector="{{AdminImportSaveAndRun.runButton}}" stepKey="clickRun"/>

        <!-- Check Import results -->
        <waitForText userInput="Entity customer_composite" selector="{{AdminImportSaveAndRun.importResult}}" stepKey="waitForImportEntity"/>
        <actionGroup ref="AdminImportConsoleResultActionGroup" stepKey="checkConsoleResult">
            <argument name="consoleImportResult" />
        </actionGroup>
        
    </test>
</tests>